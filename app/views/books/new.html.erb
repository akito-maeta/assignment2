<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<h6>Title</h6><%= f.text_field :title %>

<h6>Body</h6><%= f.text_area :body %><br>

<%= f.submit 'Create Book' %>

<% end %>