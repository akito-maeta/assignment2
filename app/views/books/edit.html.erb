<h1>Editing Book</h1>

<% if @book.errors.any? %>

<div class="error-box">
    <div class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
    <ul class="error-message-box">
      <% @book.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>

<%= form_for(@book) do |f| %>

<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %><br>
<%= f.submit ' Update Book ' %><br>
<div class="show-back">
<%= link_to "Show", book_path(@book) %> |
<a href="/books">Back</a>
</div>

<% end %>
